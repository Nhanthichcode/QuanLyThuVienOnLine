<style>
  /* Basic styles */
  .nav-link {
    text-decoration: none;
  }

  /* Navbar container */
  .navbar-custom {
    background: linear-gradient(90deg, #ff5858 0%, #f09819 55%, #a770ef 100%);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  /* Brand/logo */
  .navbar-brand {
    font-weight: bold;
    font-size: 1.3rem;
    color: #fff !important;
    letter-spacing: 1px;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
  }
  .bi-brightness-high {
    color: #ffffff;
  }
  .bi-moon-stars {
    color: #fff;
  }
  /* Nav links */
  .navbar-nav .nav-link {
    color: #fff !important;
    font-weight: 500;
    margin-right: 0.5rem;
    transition: all 0.2s ease;
    border-radius: 4px;
    padding: 0.45rem 0.9rem;
  }

  .navbar-nav .nav-link:hover,
  .navbar-nav .nav-link.active {
    background: rgba(255, 255, 255, 0.13);
    color: #ffe066 !important;
  }

  /* Cart & Rent buttons */
  .navbar-nav .nav-link.btn-cart,
  .navbar-nav .nav-link.btn-rent {
    font-size: 0.9rem;
    padding: 0.35rem 0.7rem;
    margin-left: 0.5rem;
    position: relative;
    overflow: hidden;
    z-index: 1;
    transition: all 0.3s ease;
  }

  .btn-cart {
    background: rgba(68, 230, 28, 0.478);
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  .btn-rent {
    background: rgba(229, 42, 242, 0.296);
    border: 1px solid rgba(32, 201, 151, 0.3);
  }

  /* Button hover effects */
  .btn-cart:before,
  .btn-rent:before {
    content: "";
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    transition: all 0.4s ease-in-out;
    z-index: -1;
  }

  .btn-cart:before {
    left: -100%;
    background: rgba(255, 255, 255, 0.2);
  }

  .btn-rent:before {
    right: -100%;
    background: rgba(32, 201, 151, 0.3);
  }

  .btn-cart:hover:before {
    left: 0;
  }
  .btn-rent:hover:before {
    right: 0;
  }

  /* Badge */
  .navbar .badge {
    font-size: 0.7em;
    padding: 0.25em 0.5em;
    transition: all 0.3s ease;
  }

  .badge:hover {
    transform: scale(1.1);
  }

  /* Search form */
  .navbar .form-control {
    border-radius: 20px;
    min-width: 180px;
  }

  /* Theme switcher */
  .theme-container {
    margin: 0 1rem;
    padding: 0.5rem;
  }

  .theme-switch {
    width: 35px;
    height: 35px;
    border-radius: 50%;
    border: 2px solid rgba(255, 255, 255, 0.3);
    background: transparent;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .theme-label {
    color: #fff;
    font-size: 0.9rem;
    font-weight: 500;
  }

  /* Login status */
  .login-status {
    display: inline-flex;
    align-items: center;
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
    margin-right: 1rem;
    font-size: 0.9rem;
    font-weight: 500;
  }

  .login-status.logged-in {
    background: rgba(218, 59, 221, 0.496);
    border: 1px solid rgba(0, 255, 60, 0.3);
  }

  .login-status.logged-out {
    background: rgba(255, 206, 58, 0.397);
    border: 1px solid rgba(152, 255, 7, 0.385);
  }

  /* Responsive */
  @media (max-width: 576px) {
    .navbar-brand {
      font-size: 1.05rem;
    }

    .navbar-nav .nav-link {
      padding: 0.4rem 0.7rem;
      font-size: 0.98em;
    }

    .navbar .form-control {
      min-width: 100px;
      font-size: 0.95em;
    }

    .theme-container {
      margin: 0.5rem 0;
      padding: 0.3rem;
    }

    .theme-switch {
      width: 30px;
      height: 30px;
    }

    .theme-label {
      font-size: 0.8rem;
    }
  }
</style>

