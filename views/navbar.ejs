  .alert-success {
    text-shadow: 0 0 60px green, 0 0 60px greenyellow;
    box-shadow: 0 0 10px green, 0 0 5px greenyellow;
  }
  .dropdown-item:hover,
  .dropdown-toggle:hover,
  .nav-link:hover:not(.d-block) {
    box-shadow: 0 0 40px currentColor, 0 0 40px currentColor;
    transform: translateY(-1px);
  }
  .btn-success:hover {
    box-shadow: 0 0 30px greenyellow, 0 0 20px green;
    transform: translateY(-1px);
