    width: 100%;
    height: 100%;
    top: 0;
    transition: all 0.4s ease-in-out;
    z-index: -1;
  }

  .btn-cart:before {
    left: -100%;
    background: rgba(255, 255, 255, 0.2);
  }

  .btn-rent:before {
    right: -100%;
    background: rgba(32, 201, 151, 0.3);
  }

  .btn-cart:hover:before {
    left: 0;
  }
  .btn-rent:hover:before {
