<!-- Theme Switcher Script -->
<script>
  function toggleTheme() {
    const body = document.body;
    const themeIcon = document.querySelector(".theme-switch i");
    const themeText = document.querySelector(".theme-text");
    const themeStylesheet = document.querySelector(
      'link[href="/CSS/theme.css"]'
    );

    if (!body.classList.contains("dark-theme-mode")) {
      // Enable dark theme
      body.classList.add("dark-theme-mode");
      themeIcon.classList.replace("bi-brightness-high", "bi-moon-stars");
      themeText.textContent = "T·ªëi";
      themeStylesheet.disabled = false;
      localStorage.setItem("theme", "dark");
    } else {
      // Disable dark theme
      body.classList.remove("dark-theme-mode");
      themeIcon.classList.replace("bi-moon-stars", "bi-brightness-high");
      themeText.textContent = "S√°ng";
      themeStylesheet.disabled = true;
      localStorage.removeItem("theme");
    }
  }

  // Update the DOMContentLoaded event listener
  document.addEventListener("DOMContentLoaded", () => {
    const savedTheme = localStorage.getItem("theme");
    const themeStylesheet = document.querySelector(
      'link[href="/CSS/theme.css"]'
    );
    const themeText = document.querySelector(".theme-text");

    // Initially disable the dark theme stylesheet
    themeStylesheet.disabled = true;

    if (savedTheme === "dark") {
      document.body.classList.add("dark-theme-mode");
      themeStylesheet.disabled = false;
      document
        .querySelector(".theme-switch i")
        .classList.replace("bi-brightness-high", "bi-moon-stars");
      themeText.textContent = "T·ªëi";
    }
  });
</script>
