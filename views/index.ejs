<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <meta
      name="description"
      content="Thư Viện Online - Nơi chứa vô số cuốn sách hay."
    />
    <meta name="author" content="Lê Trí Nhàn" />
    <title><%= title %> - Thư Viện Online</title>
    <link href="http://127.0.0.1:3001/CSS/app.css" rel="stylesheet" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css"
      rel="stylesheet"
    />
  </head>

  <body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-md navbar-light bg-white shadow-sm">
      <div class="container">
        <a class="navbar-brand" href="/">Thư Viện Online</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#mainNavbar"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="mainNavbar">
          <ul class="navbar-nav ms-auto">
            <% if (typeof session === "undefined" || !session.MaNguoiDung) { %>
            <li class="nav-item">
              <a class="nav-link" href="/dangky">Đăng ký</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/dangnhap">Đăng nhập</a>
            </li>
            <% } else { %>
            <li class="nav-item">
              <a class="nav-link" href="/admin">Quản lý</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/dangxuat">Đăng xuất</a>
            </li>
            <% } %>
          </ul>
          <form class="d-flex ms-3" action="/timkiem" method="POST">
            <input
              class="form-control me-2"
              type="search"
              name="tukhoa"
              placeholder="Tìm kiếm sách..."
              required
            />
            <button class="btn btn-outline-primary" type="submit">
              Tìm kiếm
            </button>
          </form>
        </div>
      </div>
    </nav>

    <!-- Banner -->
    <div class="container text-center my-4">
      <h1 class="display-4">Khám phá hàng nghìn cuốn sách tuyệt vời</h1>
      <p class="lead text-muted">Thư viện online dành cho mọi độc giả.</p>
    </div>

    <!-- Main Content -->
    <main class="container py-4">
      <div class="row">
        <!-- Danh sách sách (bên trái) -->
        <div class="col-md-9">
          <h2 class="mb-4"><%= title %></h2>
          <div class="row">
            <% if (sach && sach.length > 0) { %> <% sach.forEach(function(book)
            { %>
            <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
              <div class="card h-100 shadow-sm">
                <% if (book.HinhAnh) { %>
                <img
                  src="/uploads/<%= book.HinhAnh %>"
                  class="card-img-top"
                  alt="<%= book.TenSach %>"
                  style="object-fit: cover; height: 160px"
                />
                <% } else { %>
                <img
                  src="/uploads/default.jpg"
                  class="card-img-top"
                  alt="No Image"
                  style="object-fit: cover; height: 160px"
                />
                <% } %>
                <div class="card-body">
                  <h5 class="card-title"><%= book.TieuDe %></h5>
                  <p class="card-text">
                    <span class="badge bg-primary"
                      ><%= book.ChuDe ? book.ChuDe.TenChuDe : "Không xác định"
                      %></span
                    >
                  </p>
                  <p class="card-text mb-1">
                    <strong>Tác giả:</strong> <%= book.TacGia %>
                  </p>
                  <p class="card-text">
                    <strong>Năm XB:</strong>
                    <% if (book.NamXuatBan) { %> <%= new
                    Date(book.NamXuatBan).toLocaleDateString("vi-VN") %> <% }
                    else { %> Chưa xác định <% } %>
                  </p>
                </div>
                <div class="card-footer text-center">
                  <a
                    href="/sach/sach_chitiet/<%= book._id %>"
                    class="btn btn-primary btn-sm"
                    >Chi tiết <i class="bi bi-chevron-right"></i
                  ></a>
                </div>
              </div>
            </div>
            <% }); %> <% } else { %>
            <div class="col-12">
              <p class="text-center">Không có sách nào được tìm thấy.</p>
            </div>
            <% } %>
          </div>
        </div>

        <!-- Sidebar (Bên phải) -->
        <div class="col-md-3">
          <!-- Chủ đề phổ biến -->
          <div class="card mb-4">
            <div class="card-body">
              <h4 class="card-title">Chủ đề phổ biến</h4>
              <% if (typeof chuyenmuc !== "undefined") { %> <%
              chuyenmuc.forEach(function(cd) { %>
              <a
                class="btn btn-outline-primary btn-sm mb-1"
                href="/sach/chude/<%= cd._id %>"
                ><%= cd.TenChuDe %></a
              >
              <% }); %> <% } %>
            </div>
          </div>

          <!-- Xem nhiều nhất -->
          <div class="card mb-4">
            <div class="card-body" style="max-height: 400px; overflow-y: auto">
              <h4 class="card-title">Xem nhiều nhất</h4>
              <% if (typeof xemnhieunhat !== "undefined") { %> <%
              xemnhieunhat.forEach(function(book) { %>
              <a href="/sach/chitiet/<%= book._id %>" class="d-block mb-3">
                <h6 class="mb-1"><%= book.TenSach %></h6>
                <p class="text-warning">
                  <i class="bi bi-eye-fill"></i> <%= book.LuotXem %> lượt xem
                </p>
                <img
                  src="/uploads/<%= book.HinhAnh %>"
                  class="img-fluid rounded"
                  alt="<%= book.TenSach %>"
                />
              </a>
              <hr />
              <% }); %> <% } %>
            </div>
          </div>
        </div>
      </div>
    </main>

    <!-- Footer -->
    <footer class="site-footer bg-dark text-white py-4">
      <div class="container text-center">
        <ul class="nav justify-content-center mb-2">
          <li class="nav-item">
            <a class="nav-link" href="#">Chính sách riêng tư</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/dangky">Đăng ký</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/dangnhap">Đăng nhập</a>
          </li>
          <li class="nav-item"><a class="nav-link" href="#">Liên hệ</a></li>
        </ul>
        <p>&copy; 2025 Thư Viện Online | Lê Trí Nhàn</p>
      </div>
    </footer>

    <script src="http://127.0.0.1:3001/js/app.js"></script>
  </body>
</html>
